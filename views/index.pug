extends layout

block content 
  div(class="m-auto w-75")
    a(href="/adduser" class="btn btn-primary" role="button") Add user
    h2(class="text-center") User details
    table(class="table table-striped")
      thead(class="thead-dark")
        tr
          th(scope="col") ID
          th(scope="col") Name
          th(scope="col") Email
          th(scope="col") Gender
          th(scope="col") Status
          th(scope="col") Action 
      tbody
        each user in users
          tr
            -let id = user.id.substring(5,10)
            td #{id}
            td #{user.name}
            td #{user.email}
            td #{user.gender}
            td #{user.status}
            td 
              button(type="button" class="btn btn-outline-warning mr-2")
                a(href="/updateuser/"+user.id class="edit")
                  i(class="fas fa-edit")
              button(type="button" class="btn btn-outline-danger delete-user"  id=user.id)
                i(class="fas fa-trash-alt")
  script(src="/javascripts/delete.js")
     
